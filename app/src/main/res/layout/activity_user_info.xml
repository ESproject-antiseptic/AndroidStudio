<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#1A000000"
    android:gravity="center"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingBottom="200dp"
    android:paddingTop="200dp"
    tools:context=".UserInfo">
    <LinearLayout
        android:padding="12dp"
        android:elevation="10dp"
        android:background="#3c5b9a"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="9"
                android:gravity="center"
                android:text="회원 정보 수정"
                android:textColor="#fff"
                android:textSize="36dp" />

            <ImageView
                android:tint="#fff"
                android:id="@+id/btn_userinfo_backpress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_close_24" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/login_borderbox">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:tint="#000"
                android:src="@drawable/ic_baseline_person_24" />

            <EditText
                android:id="@+id/edit_userinfo_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:background="@null"
                android:textColor="#000"
                android:hint="수정할 이름을 입력하세요"
                android:textColorHint="#000" />

        </LinearLayout>
        <Button
            android:id="@+id/btn_userinfo_save"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/loginbuttonbox"
            android:textColor="#fff"
            android:text="저장"
            android:textSize="24dp" />
    </LinearLayout>


</LinearLayout>