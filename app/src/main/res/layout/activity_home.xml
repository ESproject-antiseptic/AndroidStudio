<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baefont"
            android:lineHeight="10dp"
            android:text="Antiseptic19"
            android:textColor="#000"
            android:textSize="36dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/btn_close_Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textColor="#e03131"
                android:textSize="28dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/baefont"
            android:text="종류를 선택하세요"
            android:textColor="#000"
            android:textFontWeight="100"
            android:textSize="32dp" />

        <Button
            android:id="@+id/btn_home_join"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/home_borderbox"
            android:elevation="10dp"
            android:text="방 입장"
            android:textColor="#000"
            android:textSize="32dp" />

        <LinearLayout
            android:id="@+id/code_visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <EditText
                android:id="@+id/edit_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="코드를 입력해주세요" />

            <Button
                android:id="@+id/btn_home_inner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:text="입장"
                android:textSize="16dp" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_home_create"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/normal_borderbox"
            android:elevation="10dp"
            android:text="방 만들기"
            android:textColor="#000"
            android:textSize="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            >

            <FrameLayout
                android:layout_gravity="bottom"
                android:layout_width="80dp"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="56dp"
                    android:id="@+id/Linear_background"
                    android:background="@drawable/home_hightlight_background"
                    android:layout_height="56dp"
                    android:orientation="horizontal" />
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/image_home_highlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_home_highlight"
                    android:src="@drawable/ic_baseline_priority_high_24" />

            </FrameLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>