<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baefont"
            android:lineHeight="10dp"
            android:text="Antiseptic19"
            android:textColor="#000"
            android:textSize="36dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right||center_horizontal">

            <TextView
                android:id="@+id/btn_close_Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textColor="#e03131"
                android:textSize="28dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#000" />

    <LinearLayout
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종류를 선택하세요"
            android:textSize="32dp"
            android:textColor="#000"
            android:layout_gravity="center_horizontal"
            />
        <Button
            android:id="@+id/btn_home_join"
            android:background="@drawable/home_borderbox"
            android:layout_marginTop="24dp"
            android:text="방 입장"
            android:textSize="32dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <Button
            android:id="@+id/btn_home_create"
            android:background="@drawable/home_borderbox"
            android:layout_marginTop="24dp"
            android:text="방 만들기"
            android:textSize="32dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    </LinearLayout>


</LinearLayout>